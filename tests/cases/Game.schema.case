module Test.Domain

enum Side =
    | Player1
    | Player2

union GameStatus =
    | InProgress of turn:int
    | Finnished of winner:Side * turn:int
    | Terminated

record struct Location = {
    X: int
    Y: int
}

record Unit = {
    Name: string
    Health: int
}

record Game = {
    Id: guid
    Turn: int
    Player: int
    Status: GameStatus
    Board: map<Location, Unit>
    LastChange: timestamp
}

union struct Action =
    | EndOfTurn
    | Drop of dropPoint:Location
    | Move of fromPoint:Location * toPoint:Location

record Request = {
    Game: Game
    Action: Action
}

record Response = {
    Game: Game
    PossibleActions: list<Action>
}
